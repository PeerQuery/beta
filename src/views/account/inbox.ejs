<body>


<section class="navbarSection">
	<% include ../partials/navbar.ejs %>
</section>



	
	

<div class="ui container">
  
	
    
    
    
<div class="ui stackable grid">

	<div class="four wide column">
	

  <!-- ejs -->
  
  	<% include ../partials/account-sidebar.ejs %>
  
  <!-- ejs -->
  
	
	</div>
  
  
	<div class="twelve wide column">
    
        <div style="margin-top: 5rem"></div>
		
        
	<br/>
    
    <div style = "text-align: right">
    
        <h4> <i class="envelope outline icon"></i> <%= data.received_messages || 0 %> | <i class="envelope open outline icon"></i> <%= data.viewed_messages || 0 %></h4>
        
    
    </div>
	
    
        <div class="ui divider"></div>
	
	
        
            <br/>
            <br/>
    
		
		<div class="ui active centered inline loader" id="loader"></div>
		
		<div class="ui very relaxed list" style="margin-top:5rem; margin-bottom:3rem; width: 100%; margin: auto" id="item-container">	 </div>
	
		<button class="ui right floated button" id="moreBtn" style="display:none; margin-top: 3rem">Load more</button>
	
	
	
 
  
        </div>  

    </div>  

</div>  
  
  
  
  
  
	
	
	
<section name="modal for viewing posts">

<div class="ui read modal">
	<i class="close icon"></i>
	
	<div class="header"><span id="modal_title"></span></div>
	
	
	<div class="post_content scrolling content">
		
		<div class="description" id="modal_content">
	
		</div>
        
        <span style="display:none" id="active_id"></span>
	
	</div>
	
	<div class="actions">
		<div class="ui black right negative button">
			Close
		</div>
	</div>
</div>

</section>



	<script src="/build/dist/scripts.js"></script>
    <script>
    //
    
    $('.read.modal')
        .modal({
            onHide  : function(){
            
                    $('#modal_title').html( '' );
                    $('#modal_content').html( '' );
                    
                    var active_id = $('#active_id').text();
                    document.getElementById(active_id).style.fontWeight = "lighter";
                
            }
        })
    ;
    
    function close_modal(name) {
        $('.' + name + '.modal').modal('hide');
    }
    
    function show_modal(name) {
        $('.' + name + '.modal').modal('show');
    }
    
            
    </script>
	
	<script src="/build/dist/account_inbox.js"></script>
  
  
	<section class="footerSection">
		<% include ../partials/footer.ejs %>
	</section>



  
</body>

</html>
