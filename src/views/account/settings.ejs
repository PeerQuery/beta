</head>
<body>


<section class="navbarSection">
	<% include ../partials/navbar.ejs %>
</section>




	

<div class="ui container">
  
	
    
    
    
<div class="ui stackable grid">

	<div class="four wide column">
	

  <!-- ejs -->
  
  	<% include ../partials/account-sidebar.ejs %>
  
  <!-- ejs -->
  
	
	</div>
  
  
	<div class="twelve wide column">
    
        <div style="margin-top: 5rem"></div>
		
        
	<br/>
    
    <div style = "text-align: right">
    
        <h4>Settings</h4>
        
    
    </div>
	
    
        <div class="ui divider"></div>
	
	
        
            <br/>

            <h4 class="ui dividing header">Thank you message for new benefactors</h4>

        <div class="ui clearing segment">

            <div class="ui form">
                <div class="field">
                    <label>Title</label>
                    <input type="text" id="benefactormessageTitle" value="<%= data.new_benefactor_message_title %>">
                </div>
                <div class="field">
                    <label>Body</label>
                    <textarea rows="2" id="benefactormessageBody"><%= data.new_benefactor_message_body %></textarea>
                </div>
                
                <div class="ui right floated button" id="benefactormessageBtn">Save</div>
            </div>    
            
        
        </div>
        
        
            <br/>
            <br/>
                

        <div>

            <h4 class="ui dividing header">Available for hire</h4>

            <div class="ui clearing segment">
                <div class="field">
                    <div class="ui toggle checkbox hiring">
                        <input type="checkbox" id="hiringInput">
                        <label for="hiringInput">Be featured to potential employers. Show a "hire me" button on your profile.</label>
                    </div>
                    <button class="compact ui right floated button" id="hiringBtn">Save</button>
                </div>
            </div>
  
            <h4 class="ui dividing header">Turn off messaging</h4>

            <div class="ui clearing segment">
                <div class="field">
                    <div class="ui toggle checkbox messaging">
                        <input type="checkbox" id="messagingInput">
                        <label for="messagingInput" >You would no longer receive messages from anyone. Undo anytime</label>
                    </div>
                    <button class="compact ui right floated button" id="messagingBtn">Save</button>
                </div>
            </div>
    
    
        </div>

            
		
	
	</div>
    
</div>
    
	
 
  
</div>  
  
  
  


	<script src="/build/dist/scripts.js"></script>
    <script>
    //
    
    function get_checked_data(type) {
        
        //slightly throttle use of feature by disabling upon save, to re-use user must reload page
        $('.ui.checkbox.' + type).checkbox('set disabled');
        
        return $('.ui.checkbox.' + type).checkbox('is checked');
        
    }
    //the input fields do not work. they always return 'on'
    
    $('.ui.toggle').checkbox();
    
    var current_messaging = '<%= data.messaging %>'
    var current_hiring = '<%= data.hiring %>'
    
    if(current_messaging == 'true') $('.ui.checkbox.messaging').checkbox('check');
    if(current_hiring == 'true') $('.ui.checkbox.hiring').checkbox('check');
    
    </script>
	
	<script src="/build/dist/account_settings.js"></script>
  
  
	<section class="footerSection">
		<% include ../partials/footer.ejs %>
	</section>



  
</body>

</html>
