	<script src="/build/dist/scripts.js"></script>
    <script>
    //
    
    window.account  = "<%= data.account %>";
    window.created  = "<%= data.created %>";
    window.hiring  = ("<%= data.hiring %>" == "true") ? true : null;
    window.messaging  = ("<%= data.messaging %>" == "true") ? true : null;
    
    if(created && active_user) {
        if(active_user !== account && messaging) $('#message_btn').removeClass('disabled');
        if(active_user !== account && hiring) $('#hire_btn').removeClass('disabled').show();
        if(active_user !== account) $('#follow_btn').show();
        $('#tip_btn').removeClass('disabled');
    }
    
    //set click listeners
        
    $('#edit_btn').click(function() {
        $('.edit.modal').modal('show');
    });
        
    $('#message_btn').click(function() {
        $('.message.modal').modal('show');
    });
        
    $('#tip_btn').click(function() {
        $('.tip.modal').modal('show');
    });  
    
    $('#hire_btn').click(function() {
        $('.hire.modal').modal('show');
    });  
    
        
    $('.message.modal')
        .modal({
            onShow  : function(){
            
                $('#messageForm').attr('class', 'ui form');
                $('#sendBtn').removeClass('disabled');
                
            }
        })
    ;
    
        
    $('.tip.modal')
        .modal({
            onShow  : function(){
            
                    $('#tipamountInput').val( '25' );
                    $('#tipcurrencyInput').dropdown('set selected', 'sbd' );
                
            }
        })
    ;
    
    $('.hire.modal')
        .modal({
            onShow  : function(){
            
                $('#hireForm').attr('class', 'ui form');
                $('#hireBtn').removeClass('disabled');
                
            }
        })
    ;
    
    $('.edit.modal')
        .modal({
            onShow  : function(){
            
                $('#editForm').attr('class', 'ui form');
                
                    
                    $('#firstnameInput').val( $('#firstnameField').text() );
                    $('#lastnameInput').val( $('#lastnameField').text() );
                    $('#aboutInput').val( $('#aboutField').text() );
                    $('#skillInput').val( $('#skillField').text() );
                    $('#interestInput').dropdown('set selected', $('#interestField').text() );
                    $('#locationInput').val( $('#locationField').text() );
                    $('#websiteInput').val( $('#websiteField').attr('href') );
                    $('#positionInput').val( $('#positionField').text() );
                    $('#companyInput').val( $('#companyField').text() );
                    $('#industryInput').dropdown('set selected', $('#industryField').text() );
                    $('#emailInput').val( $('#emailField').attr('href') );
                    
                    $('#facebookInput').val( $('#facebookField').attr('href') );
                    $('#twitterInput').val( $('#twitterField').attr('href') );
                    $('#linkedinInput').val( $('#linkedinField').attr('href') );
                    
                
                $('#updateBtn').removeClass('disabled');
                
            }
        })
    ;
    
    
    function set_updates(data) {
                
                $('.edit.modal').modal('hide');
                
                $('#firstnameField').text(data.first_name);
                $('#lastnameField').text(data.last_name);
                $('#aboutField').text(data.about);
                $('#skillField').text(data.skill);
                $('#interestField').text(data.interest);
                $('#locationField').text(data._location);
                $('#positionField').text(data.position);
                $('#companyField').text(data.company);
                $('#industryField').text(data.industry);
                
                $('#websiteField').attr('href', data.website);
                $('#emailField').attr('href', data.email);
                
                $('#facebookField').attr('href', data.facebook);
                $('#twitterField').attr('href', data.twitter);
                $('#linkedinField').attr('href', data.linkedin);
                
    }
    
    function close_modal(name) {
        $('.' + name + '.modal').modal('hide');
    }
    
    $('.ui.rating').rating('disable');
            
    </script>
