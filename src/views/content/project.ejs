
<!DOCTYPE html>
<html>
<head>

	<!-- Standard Meta -->
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

	<!-- SEO Properties -->
	<title><%= data.name %> - Peer Query</title>
	<meta name="description" content="<%= data.description %>.">
	<meta name="application-name" content="Peer Query">
	
	<!-- Open graph properties -->
	<meta property="og:site_name" content="Peer Query">
	<meta property="og:title" content="<%= data.name %>">
	<meta property="og:image" content="<%= data.cover || 'https://www.peerquery.com/assets/images/peerquery-home.png' %>"/>
	<meta property="og:description" content="<%= data.description %>">
	<meta property="fb:app_id" content="384491628645652">
	
	<!-- SEO robots -->
	<meta name="robots" content="index, follow" />
	
	<link rel="stylesheet" href="/build/dist/styles.css">
    
</head>
<body>


<section class="navbarSection">
	<% include ../partials/navbar.ejs %>
</section>

<div style="background-color:#eee; height: 20rem; margin-top: -5rem; margin-bottom: 5rem; background-image: url('<%= data.cover %>'); background-position: center;  background-repeat: no-repeat; background-size: cover;">
	
	<div class="ui container">
	
	
	
		<div class="ui grid">
			<div class="three wide column">
			
				<div style="margin-top:10rem">
                    
                    <div class="image" id="project-logo-div" style="">
                        <img style="background: #fff; margin: 0; border: 1px solid #fff; border-radius: 50%;  width: 12vw; height:12vw; box-shadow: 0 2px 2px 0 rgba(34,36,38,.15)" src="<%= data.logo %>">
                    </div>
                    
				</div>
			
			</div>
			
			<div class="thirteen wide column">
			
				<div style="margin-top:17rem">
				
					
					<div class="ui yellow segment">
					
						<div class="five ui buttons">
							<a id="home" class="ui button"><i class="home icon"></i><span class="desktop-only">Overview</span></a>
							<a id="reports" class="ui button"><i class="clipboard icon"></i><span class="desktop-only">Reports</span></a>
							<a id="queries" class="ui button"><i class="question icon"></i><span class="desktop-only">Queries</span></a>
							<a id="members"  class="ui button"><i class="users icon"></i><span class="desktop-only">Members</span></a>
							<a id="settings" class="ui button <%if (data.owner !== username) { %> disabled <% } %> "><i class="cog icon"></i><span class="desktop-only">Settings</span></a>
						</div>
				
					</div>
					
					
				
				</div>
				
			</div>
			
		</div>
	
	
	</div>
  
</div>



<div class="ui container">
	
	<div class="ui stackable  grid">
		
		<div class="three wide column">
			
			
				<div class="ui basic segment">
						
						<h3 class="ui header"><%= data.name %></h3>
						
						<div class="description"><%= data.description %></div>
				</div>
				
				
				
				<div class="ui divider"></div>
				
				
				<div class="">
						
						<div class="ui list" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
							<div class="item">
								<i class="users icon"></i>
								<div class="content">
									<span data-tooltip="Members" data-position="bottom center"><%= data.member_count || '0' %> members</span>
								</div>
							</div>
							<div class="item">
								<i class="marker icon"></i>
								<div class="content">
									<span data-tooltip="Location" data-position="bottom center"><%= data.location || '..' %></span>
								</div>
							</div>
							<div class="item">
								<i class="linkify icon"></i>
								<div class="content">
									<a href="<%= data.website || '#' %>" data-tooltip="Website" data-position="top center"><%= data.website || '..' %></a>
								</div>
							</div>
							<div class="item">
								<i class="tag icon"></i>
								<div class="content">
									<a data-tooltip="Tag" data-position="top center"><%= data.tag || '..' %></a>
								</div>
							</div>
							<div class="item">
								<i class="key icon"></i>
								<div class="content">
									<a href="<%= data.owner %>" data-tooltip="Owner" data-position="top center"><%= data.owner %></a>
								</div>
							</div>
							<div class="item">
								<i class="facebook icon"></i>
								<div class="content">
									<a href="<%= data.facebook || '#' %>" data-tooltip="Facebook page" data-position="top center">Facebook</a>
								</div>
							</div>
							<div class="item">
								<i class="twitter icon"></i>
								<div class="content">
									<a href="<%= data.twitter || '#' %>" data-tooltip="Twitter page" data-position="top center">Twitter</a>
								</div>
							</div>
							<div class="item">
								<i class="discussions icon"></i>
								<div class="content">
									<a href="<%= data.chat || '#' %>" data-tooltip="Chat channel" data-position="top center">Chat</a>
								</div>
							</div>
						</div>
				
				</div>
				
				
				
				
		</div>
			
		<div class="nine wide column">
			
			
			
			<% if (data.path == '/') { %>
				<% include ../partials/project-home.ejs %>
			<% } else if (data.path == '/reports') { %>
				<% include ../partials/project-reports.ejs %>
			<% } else if (data.path == '/queries') { %>
				<% include ../partials/project-queries.ejs %>
			<% } else if (data.path == '/members') { %>
				<% include ../partials/project-members.ejs %>
			<% } else if (data.path == '/settings') { %>
				<% include ../partials/project-settings.ejs %>
			<% } %>
			
				
			
				
				
			
			
		</div>
			
		<div class="four wide column">
			
			<a class="fluid ui button" href="/create/project">Create new project</a>
		
        
			<div class="ui fluid card">
				<div class="content">
					<div class="header">Project Details</div>
				</div>
				<div class="content">
					<h4 class="ui sub header">Mission</h4>
					<div class="ui small feed">
						<div class="event">
							<div class="content">
								<div class="summary">
									<%= data.mission || '..' %>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="content">
					<h4 class="ui sub header">History</h4>
					<div class="ui small feed">
						<div class="event">
							<div class="content">
								<div class="summary">
									Started by <a href="/@<%= data.founder %>">@<%= data.founder %></a> on <%= new Date(data.created).toDateString() %>.
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="extra content">
					<button class="ui disabled button">Join Project</button>
				</div>
			</div>
			
			
		</div>
		
		
		</div>
		
		
		
	</div>
	
	
	
	
	<script> const project_slug = '<%= data.slug %>'; const project_logo = '<%= data.logo %>'; </script>
	<script src="/build/dist/scripts.js"></script>
	<script src="/build/dist/project.js"></script>
	
  
	<section class="footerSection">
		<% include ../partials/footer.ejs %>
	</section>


  
</body>

</html>
