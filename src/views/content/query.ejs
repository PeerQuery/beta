
<!DOCTYPE html>
<html>
<head>

	<!-- Standard Meta -->
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

	<!-- SEO Properties -->
	<title><%= data.title %> - Peer Query</title>
	<meta name="description" content="<%= data.description %>">
	<meta name="application-name" content="Peer Query">
	
	<!-- Open graph properties -->
	<meta property="og:site_name" content="Peer Query">
	<meta property="og:title" content="<%= data.title %> - Peer Query">
	<meta property="og:image" content="<%= data.image %>"/>
	<meta property="og:description" content="<%= data.description %>">
	<meta property="fb:app_id" content="384491628645652">
	
	<!-- SEO robots -->
	<meta name="robots" content="index, follow" />
	
	<script src="/build/dist/ui.js"></script>
	
</head>
<body>



<section class="navbarSection">
	<% include ../partials/navbar.ejs %>
</section>



	
  <div class="ui container">
	

<div class="two column stackable ui grid">
	
	<section name="main content" class="eleven wide column">
	
		
		<div class="ui segments">
		
			<div class="ui segment">
			
				<h2 class="ui header"><%= data.title %></h2>
	
			</div>
			
			<div class="ui segment">
			
				<div class="ui image">
					<img style="height:400px; width:100%" src="<%= data.image %>">
				</div>
		
			</div>
			
			<div class="ui segment">
				
				<div class="ui feed">
					<div class="event">
						<div class="label">
							<img src="https://steemitimages.com/u/<%= data.author %>/avatar">
						</div>
						<div class="content">
							<div class="summary">
								<a href="/peer/<%= data.author %>"><%= data.author %></a> created this <a><%= data.type %></a>.
								<div class="date">
									<%= data.created.toDateString() %>
								</div>
							</div>
						</div>
					</div>
				</div>
			
			</div>
			
			<div class="ui segment">
		
				<h4><%= data.description %></h4>
		
			</div>
			
			<div class="ui segment">
				
				<div><%- data.body %></div>
				
			</div>
			
			<div class="ui segment">
			  
			  
			  
				<div class="ui vertically divided grid">
					<div class="two column row">
						<div class="column">
						
						
							<div class="ui list">
							
								<div class="item">
									<i class="money icon"></i>
									<div class="content">
										<a class="header">Bounty</a>
										<a class="description"><%= '$' + data.reward %></a>
									</div>
								</div>
							
								<div class="item">
									<i class="handshake outline icon"></i>
									<div class="content">
										<a class="header">Reward form</a>
										<a class="description"><%= data.reward_form %></a>
									</div>
								</div>
							
								<div class="item">
									<i class="calendar times icon"></i>
									<div class="content">
										<a class="header">Deadline</a>
										<a class="description"><%= data.deadline.toDateString() %></a>
									</div>
								</div>
							
							</div>
						


						</div>
						<div class="column">
							
							<div class="ui list">
							
								<div class="item">
									<i class="phone icon"></i>
									<div class="content">
										<a class="header">Telephone</a>
										<a class="description"><%= data.telephone %></a>
									</div>
								</div>
							
								<div class="item">
									<i class="envelope outline icon"></i>
									<div class="content">
										<a class="header">Email</a>
										<a class="description"><%= data.email %></a>
									</div>
								</div>
							
								<div class="item">
									<i class="globe icon"></i>
									<div class="content">
										<a class="header">Website</a>
										<a target="_blank" href="<%= data.website %>" class="description"><%= data.website %></a>
									</div>
								</div>
							
							</div>
							
						</div>
					</div>
				</div>
					
			</div>
			
			
			

			<div class="ui segment">
			  
				<div class="ui right pointing red label">
					Tagged in
				</div>
				<a class="ui orange label"><%= data.label %></a>
					
			</div>

	
			<div class="ui secondary segment">
			
				<span class="ui red horizontal label">Author and subject agreement</span>
					
				<p><%= data.terms %></p>
					
			</div>

		</div>
	
	</section>
	
	
	
	
	<section name="sidebar" class="five wide column">
		
	</section>
	
	
</div>
	
	</div>
	

	<script src="/build/dist/report.js"></script>
	
	
	<section class="footerSection">
		<% include ../partials/footer.ejs %>
	</section>
	
	
</body>

</html>
