	document.getElementById("responses-loader").style.display = "block";

	document.getElementById("more-btn").dataset.type = element.id;
	document.getElementById("more-btn").dataset.href = "";
	//document.getElementById("more-btn").dataset.author = "";
	
		var msg = "";
		
		if(element.id == "trending") msg = "More trendings";
		if(element.id == "new") msg = "More new";
		if(element.id == "hot") msg = "More hot";
		if(element.id == "by-votes") msg = "More by votes";
		if(element.id == "by-responses") msg = "More by responses";
		
		document.getElementById("more-btn").innerText = msg;

		
	loadMore(document.getElementById("more-btn"));
		
}


