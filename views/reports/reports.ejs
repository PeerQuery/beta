function loadMore(element) {

	document.getElementById("more-btn").style.visibility = "hidden";
	document.getElementById("post-loader").style.display = "block";
	
	
	var limt = 11;
	
	var last_permlink = element.dataset.href;
	var last_author = element.dataset.author;
	
	
		if (element.dataset.href == "") {
			query = { tag: element.dataset.topic, limit: limt };
		} else {
			query = { tag: element.dataset.topic, limit: limt, start_author : last_author, start_permlink : last_permlink };
		}
		
		//console.log(element.dataset.type);
		
		
		if (element.dataset.type == "trending") getByTrending(query, element);
		if (element.dataset.type == "hot") getByHot(query, element);
		if (element.dataset.type == "new") getByCreated(query, element);
		if (element.dataset.type == "by-votes") getByVotes(query, element);
		if (element.dataset.type == "by-responses") getByChildren(query, element);
	
}



function getByTrending(query, element) {
	
